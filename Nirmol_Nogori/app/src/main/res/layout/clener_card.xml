                android:text="Reviewer Date"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/card_reviewer_photo2"
                app:layout_constraintTop_toBottomOf="@id/card_cleanerTXT_reviewer_name2"
                tools:ignore="MissingConstraints" />

