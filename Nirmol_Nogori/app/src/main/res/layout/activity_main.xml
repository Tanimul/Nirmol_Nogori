<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group_2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_homepage_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="নির্মল"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView_homepage_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_homepage_title1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="নগরী"
        android:textSize="35dp" />

    <!--    <TextView-->
    <!--        android:id="@+id/textView_quote"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginLeft="29dp"-->
    <!--        android:layout_marginTop="126dp"-->
    <!--        android:gravity="center"-->
    <!--        android:text="Let's come and clean the Dhaka city !"-->
