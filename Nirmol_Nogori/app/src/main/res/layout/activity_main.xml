    <Button
        android:id="@+id/button_go_Login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="255dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rectangle2"
        android:text="Login"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView_loginwith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_go_Login"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:gravity="center"
        android:text="Login with"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imagebutton_gmail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView_loginwith"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/gmail" />

    <TextView
        android:id="@+id/textView_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_loginwith"
        android:layout_alignLeft="@id/imagebutton_gmail"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="or"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/imagebutton_facebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView_loginwith"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/facebook" />

    <TextView
        android:id="@+id/textView_have_acount_or_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagebutton_gmail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Do You have any account ?"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_from_main_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagebutton_gmail"
        android:layout_alignLeft="@id/textView_have_acount_or_not"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Register"
        android:textSize="22dp" />


</RelativeLayout>